@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="auth-bg">
    <div class="auth-card">
        <h2 class="auth-title">ĐĂNG NHẬP</h2>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email / Tên đăng nhập</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="checkbox mb-3 ms-1">
                <label asp-for="Input.RememberMe" class="form-label text-secondary">
                    <input class="form-check-input me-1" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <div>
                <button id="login-submit" type="submit" class="btn btn-auth btn-lg">Đăng nhập ngay</button>
            </div>

            <div class="auth-links">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                </p>
                <p>
                    Chưa có tài khoản?
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký mới</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
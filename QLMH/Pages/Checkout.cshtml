@page
@model QLMH.Pages.CheckoutModel
@{
    ViewData["Title"] = "Thanh toán";
}

<h1>Thanh toán</h1>
<div class="row">
    <div class="col-md-6">
        <h4>Thông tin giao hàng</h4>
        <hr />
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Order.FullName"></label>
                <input asp-for="Order.FullName" class="form-control" />
                <span asp-validation-for="Order.FullName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Order.ShippingAddress"></label>
                <input asp-for="Order.ShippingAddress" class="form-control" />
                <span asp-validation-for="Order.ShippingAddress" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Order.PhoneNumber"></label>
                <input asp-for="Order.PhoneNumber" class="form-control" />
                <span asp-validation-for="Order.PhoneNumber" class="text-danger"></span>
            </div>

            <p>Phương thức thanh toán: Thanh toán khi nhận hàng (COD)</p>

            <div class="form-group">
                <input type="submit" value="Xác nhận Đặt hàng" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <h4>Đơn hàng của bạn</h4>
        <hr />
        <ul class="list-group mb-3">
            @foreach (var item in Model.Cart)
            {
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">@item.ProductName</h6>
                        <small class="text-muted">Số lượng: @item.Quantity</small>
                    </div>
                    <span class="text-muted">@item.Total.ToString("N0") VNĐ</span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between">
                <strong>Tổng cộng (VNĐ)</strong>
                <strong>@Model.TotalAmount.ToString("N0") VNĐ</strong>
            </li>
        </ul>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
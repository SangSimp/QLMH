@page
@model QLMH.Pages.CheckoutModel
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container py-5">
    <h2 class="mb-4 text-center fw-bold">Thông tin thanh toán</h2>

    <div class="row">
        <div class="col-md-7">
            <div class="card shadow-sm p-4">
                <h4 class="mb-3">Thông tin giao hàng</h4>
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Order.FullName" class="form-label">Họ và Tên người nhận</label>
                        <input asp-for="Order.FullName" class="form-control" placeholder="Nhập họ tên đầy đủ" required />
                        <span asp-validation-for="Order.FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Order.PhoneNumber" class="form-label">Số điện thoại</label>
                        <input asp-for="Order.PhoneNumber" class="form-control" placeholder="Ví dụ: 0912345678" required />
                        <span asp-validation-for="Order.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Order.ShippingAddress" class="form-label">Địa chỉ giao hàng</label>
                        <textarea asp-for="Order.ShippingAddress" class="form-control" rows="3" placeholder="Số nhà, tên đường, phường/xã..." required></textarea>
                        <span asp-validation-for="Order.ShippingAddress" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-warning btn-lg w-100 mt-3 fw-bold">
                        <i class="bi bi-check-circle-fill me-2"></i> Xác nhận đặt hàng
                    </button>
                </form>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Đơn hàng của bạn</h5>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.Cart)
                    {
                        <li class="list-group-item d-flex justify-content-between lh-sm">
                            <div>
                                <h6 class="my-0">@item.ProductName</h6>
                                <small class="text-muted">SL: @item.Quantity</small>
                            </div>
                            <span class="text-muted">@((item.Price * item.Quantity).ToString("N0")) đ</span>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <span class="fw-bold">Tổng cộng (VNĐ)</span>
                        <strong class="text-success fs-5">@Model.Total.ToString("N0") đ</strong>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
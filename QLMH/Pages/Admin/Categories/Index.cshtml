@page
@model QLMH.Pages.Admin.Categories.IndexModel

@{
    ViewData["Title"] = "Quản lý Danh mục";
}

<h1>Quản lý Danh mục</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm danh mục mới
    </a>
</p>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-list me-1"></i>
        Danh sách danh mục
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Category[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category[0].Description)
                    </th>
                    <th style="width: 150px;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Category)
                {
                    <tr>
                        <td class="align-middle fw-bold">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            <div class="btn-group" role="group">
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-white" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white" title="Chi tiết">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - FIGURE SHOP</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top shadow-sm">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" asp-page="/Index" style="color: #f39c12;">FIGURE SHOP</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    @await Component.InvokeAsync("CategoryMenu")

                    @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Staff")))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Admin/Dashboard/Index">Quản lý</a>
                        </li>
                    }
                </ul>
                <form asp-page="/Index" method="get" class="d-flex me-2" role="search">
                    <input class="form-control me-2" type="search" placeholder="Tìm tên figure..." aria-label="Search" name="SearchString">
                    <button class="btn btn-outline-warning" type="submit">Tìm</button>
                </form>

                <a class="btn btn-outline-light me-2" asp-page="/Cart">
                    <i class="bi-cart-fill me-1"></i>
                    Giỏ hàng
                    <span class="badge bg-light text-dark ms-1 rounded-pill">0</span>
                </a>

                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; FIGURE SHOP 2025</p></div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
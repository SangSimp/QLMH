<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>@ViewData["Title"] - Admin Panel</title>

    <link href="~/template_admin/css/styles.css" rel="stylesheet" />

    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="sb-nav-fixed">

    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" asp-page="/Admin/Dashboard/Index">Admin Panel</a>

        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>

        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0"></form>

        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <partial name="_LoginPartial" />
        </ul>
    </nav>
    <div id="layoutSidenav">

        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        
                            <div class="sb-sidenav-menu-heading">Core</div>
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="nav-link" asp-page="/Admin/Dashboard/Index">
                                    <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                    Dashboard
                                </a>
                            }

                            <div class="sb-sidenav-menu-heading">Chức năng</div>

                            @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                            {
                                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseQuanLy" aria-expanded="false" aria-controls="collapseQuanLy">
                                    <div class="sb-nav-link-icon"><i class="fas fa-store"></i></div> Quản lý Shop
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="collapseQuanLy" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" asp-page="/Admin/Categories/Index">
                                            <i class="fas fa-tags me-2"></i> Danh mục
                                        </a>
                                        <a class="nav-link" asp-page="/Admin/Products/Index">
                                            <i class="fas fa-box-open me-2"></i> Sản phẩm
                                        </a>
                                        <a class="nav-link" asp-page="/Admin/Orders/Index">
                                            <i class="fas fa-file-invoice-dollar me-2"></i> Đơn hàng
                                        </a>

                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a class="nav-link" asp-page="/Admin/Returns/Index">
                                                <i class="fas fa-undo-alt me-2"></i> Đổi trả
                                            </a>
                                        }
                                    </nav>
                                </div>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="sb-sidenav-menu-heading">Hệ thống</div>
                                <a class="nav-link" asp-page="/Admin/Users/Index">
                                    <div class="sb-nav-link-icon"><i class="fas fa-user-shield"></i></div>
                                    Tài khoản & Phân quyền
                                </a>
                            }

                            <div class="sb-sidenav-menu-heading">Liên kết</div>
                            <a class="nav-link" asp-page="/Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                                Về Trang chủ
                            </a>
                       
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">

                    @RenderBody()

                </div>
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; FIGURE SHOP 2025</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/admin_template/js/scripts.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
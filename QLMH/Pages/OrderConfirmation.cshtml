@page
@model QLMH.Pages.OrderConfirmationModel
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container py-5 text-center">
    <div class="card shadow-sm p-5 border-0" style="background-color: #f8f9fa;">
        <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
        </div>
        <h2 class="fw-bold text-success mb-3">ĐẶT HÀNG THÀNH CÔNG!</h2>
        <p class="lead text-muted">
            Cảm ơn bạn đã mua sắm tại Figure Shop.<br>
            Mã đơn hàng của bạn là: <strong>#@Model.OrderId</strong>
        </p>

        <div class="mt-4">
            <a asp-page="/Index" class="btn btn-warning btn-lg px-5 fw-bold rounded-pill">
                Tiếp tục mua sắm
            </a>
        </div>
    </div>
</div>
@page "{id:int}"
@model QLMH.Pages.ProductDetailModel
@{
    ViewData["Title"] = Model.Product.Name;
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">

            <div class="col-md-6">
                <img class="card-img-top mb-5 mb-md-0"
                     src="@(string.IsNullOrEmpty(Model.Product.ImageUrl) ? "https://dummyimage.com/600x700/dee2e6/6c757d.jpg" : Model.Product.ImageUrl)"
                     alt="@Model.Product.Name"
                     style="border-radius: 12px; box-shadow: 0 5px 15px rgba(0,0,0,0.1); max-width: 100%; height: auto; object-fit: contain;" />
            </div>

            <div class="col-md-6">
                <div class="small mb-1">Danh mục: @Model.Product.Category?.Name</div>
                <h1 class="display-5 fw-bolder">@Model.Product.Name</h1>

                <div class="fs-5 mb-3">
                    @if (Model.Product.SalePrice != null && Model.Product.SalePrice > 0)
                    {
                        <span class="product-price-old fs-4">@($"{Model.Product.Price:N0} VNĐ")</span>
                        <span class="product-price-new fs-2">@($"{Model.Product.SalePrice.Value:N0} VNĐ")</span>
                    }
                    else
                    {
                        <span class="product-price-regular fs-2">@($"{Model.Product.Price:N0} VNĐ")</span>
                    }
                </div>

                <p class="lead">@Model.Product.Description</p>

                <form method="post" asp-page="ProductDetail">
                    <input type="hidden" name="id" value="@Model.Product.Id" />
                    <div class="d-flex">
                        <input class="form-control text-center me-3" id="inputQuantity" type="number" value="1" style="max-width: 5rem" name="quantity" />
                        <button class="btn btn-outline-teal flex-shrink-0" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Thêm vào giỏ hàng
                        </button>
                    </div>
                </form>
                <div asp-validation-summary="ModelOnly" class="text-danger mt-2"></div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">Đánh giá của khách hàng</h2>

        <div class="card shadow-sm mb-5">
            <div class="card-body">
                <h4>Viết đánh giá của bạn</h4>
                @if (User.Identity.IsAuthenticated)
                {
                    <form method="post" asp-page-handler="AddReview" asp-route-id="@Model.Product.Id">
                        <div class="mb-3">
                            <label asp-for="NewReview.Rating" class="form-label"></label>
                            <select asp-for="NewReview.Rating" class="form-select" style="max-width: 150px;">
                                <option value="">Chọn số sao...</option>
                                <option value="5">5 sao</option>
                                <option value="4">4 sao</option>
                                <option value="3">3 sao</option>
                                <option value="2">2 sao</option>
                                <option value="1">1 sao</option>
                            </select>
                            <span asp-validation-for="NewReview.Rating" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewReview.Comment" class="form-label"></label>
                            <textarea asp-for="NewReview.Comment" class="form-control" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
                    </form>
                }
                else
                {
                    <p>Vui lòng <a asp-page="/Account/Login" asp-area="Identity">đăng nhập</a> để để lại đánh giá.</p>
                }
            </div>
        </div>

        @if (Model.Reviews != null && Model.Reviews.Any())
        {
            @foreach (var review in Model.Reviews)
            {
                <div class="card shadow-sm mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-title">
                                @(review.User != null ? review.User.FullName : "Người dùng ẩn danh")
                            </h5>
                            <span class="text-muted">@review.ReviewDate.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="d-flex small text-warning mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <div class="bi-star@(i <= review.Rating ? "-fill" : "")"></div>
                            }
                        </div>
                        <p class="card-text">@review.Comment</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">Chưa có đánh giá nào cho sản phẩm này.</p>
        }
    </div>
</section>